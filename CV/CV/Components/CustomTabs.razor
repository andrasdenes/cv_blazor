<Tabs SelectedTab="@SelectedTab" SelectedTabChanged="@OnSelectedTabChanged" Class=@Class>
    <Items>
        <Tab Name="techstack">Tech Stack</Tab>
        <Tab Name="achievements">Achievements</Tab>
        <Tab Name="thoughts">My Thoughts</Tab>
    </Items>
    <Content>
        <TabPanel Name="techstack">
            @foreach(var tag in Job.Tags)
            {
                <div class="p-2">
                    <Icon Name="IconName.ChevronRight" TextColor="TextColor.Black50" />
                    <Span>
                        @tag
                    </Span>
                </div>
            }
        </TabPanel>
        <TabPanel Name="achievements">
            @foreach(var achievement in Job.Achievements)
            {
                <div class="p-2">
                    @if (IsUri(achievement))
                    {
                        <Icon Name="IconName.Star" TextColor="TextColor.Warning"/>
                        <Span>
                            <a href="@achievement" target="_blank">@achievement</a>
                        </Span>
                    }
                    else
                    {
                        <Icon Name="IconName.Star" TextColor="TextColor.Warning"/>
                        <Span>
                            @achievement
                        </Span>
                    }
                </div> 
            }
        </TabPanel>
        <TabPanel Name="thoughts">
            <div class="p-2">
                @((MarkupString)Markdig.Markdown.ToHtml(Job.Description ?? string.Empty))
            </div>
        </TabPanel>
    </Content>
</Tabs>